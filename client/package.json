{
    "name": "vscode-ceylon",
    "displayName": "vscode-ceylon",
    "description": "VSCode Language Client for Ceylon",
    "version": "0.0.1",
    "publisher": "John Vasileff",
    "license": "Apache License Version 2.0",
    "engines": {
        "vscode": "^1.4.0"
    },
    "categories": [
        "Languages"
    ],
    "keywords": [
        "Ceylon"
    ],
    "activationEvents": [
        "onLanguage:ceylon"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [{
            "id": "ceylon",
            "extensions": [
                ".ceylon"
            ],
            "aliases": [
                "Ceylon"
            ],
            "configuration": "./language-configuration.json"
        }],
        "snippets": [{
            "language": "ceylon",
            "path": "./snippets/ceylon.json"
        }],
        "grammars": [
            {
                "language": "ceylon",
                "scopeName": "source.ceylon",
                "path": "./syntaxes/ceylon.tmLanguage"
            }
        ],
        "configuration": {
            "title": "Ceylon Language Server",
            "properties": {
                "ceylon.home": {
                    "type": "string",
                    "default": "",
                    "description": "The directory of the Ceylon installation to use."
                },
                "ceylon.generateOutput": {
                    "type": "boolean",
                    "default": false,
                    "description": "Write compiled binaries to the output repository. Note that output is produced regardless of whether or not the source files have been saved."
                },
                "ceylon.serverLogPriority": {
                    "type": "string",
                    "default": "disabled",
                    "description": "The logging level for the language server.",
                    "enum": [
                        "trace", "debug", "info", "warn", "error", "fatal", "disabled"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
        "compile": "node ./node_modules/vscode/bin/compile -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "portfinder": "^0.4.0",
        "vscode-languageclient": "2.2.1"
    },
    "devDependencies": {
        "typescript": "^1.8.5",
        "vscode": "^0.11.0"
    }
}
